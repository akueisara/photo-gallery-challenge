<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>

        <!--  Default Font -->
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PhotoInfoDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PhotoInfoDetail.Title">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="PhotoInfoDetail.Body1">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PhotoInfoDetail.Body2">
        <item name="android:textColor">@color/grey_700</item>
    </style>
</resources>
